# Flask Configuration
FLASK_APP=run.py
FLASK_DEBUG=1
SECRET_KEY=your-secret-key-here

# Database URL
DATABASE_URL=postgresql://user:password@server:5432/batan3_db

# Email Configuration (Flask-Mail)
